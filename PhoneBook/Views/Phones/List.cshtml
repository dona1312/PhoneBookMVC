@model PhoneBook.ViewModels.PhoneVM.PhoneListVM
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Edit", new { contactID = Model.Contact.ID })
</p>
<table class="table">
    <tr>
        <th>
            Number
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Phones)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID, contactID = item.ContactID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
   
</table>
<div>
    @Html.ActionLink("Back to Contact", "List", "Contacts")
</div>