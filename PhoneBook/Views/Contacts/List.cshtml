@model PhoneBook.ViewModels.ContactVM.ContactListVM

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @(Html.ActionLink<ContactsController>("Create New", c => c.Edit()))
</p>
@using (Html.BeginForm<ContactsController>(c => c.List(1), FormMethod.Get))
{
   <p> Search:</p>
    @Html.EditorFor(model => model.Search, new { htmlAttributes = new { @class = "form-control" } })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
<table class="table">
    <tr>

        <th>
           @(Html.ActionLink<ContactsController>("First Name", c => c.List(1), new { Search = Model.Search, SortOrder = Model.SortOrder == "fname_asc" ? "fname_desc" : "fname_asc" }, null))
        </th>
        <th>
          @(Html.ActionLink<ContactsController>("Last Name", c => c.List(1), new { Search = Model.Search, SortOrder = Model.SortOrder == "lname_asc" ? "lname_desc" : "lname_asc" }, null))
        </th>
        <th>
            @(Html.ActionLink<ContactsController>("Adress", c => c.List(1), new { Search = Model.Search, SortOrder = Model.SortOrder == "adress_asc" ? "adress_desc" : "adress_asc" }, null))
        </th>
        <th></th> 
    </tr>

    @foreach (var item in Model.Contacts)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @(Html.ActionLink<ContactsController>("Edit", c => c.Edit(), new { id = item.ID })) |
                @(Html.ActionLink<ContactsController>("Delete", c => c.Delete(item.ID))) |
                @(Html.ActionLink<PhonesController>("View Phones", c => c.List(), new { ContactID = item.ID }, null))
            </td>
        </tr>
    }

</table>
